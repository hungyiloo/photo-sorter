<Window x:Class="PhotoSorter.Views.Jump"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jump" Width="270" Height="80">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Jump to photo #" Width="Auto" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="ResponseTextBox" Text="{Binding PhotoNumber}" Width="70" Margin="5" TextAlignment="Center" FontSize="16"/>
        <Button Content="Go" Click="Button_Click" Width="60" Height="25" Margin="5" />
    </StackPanel>
</Window>
